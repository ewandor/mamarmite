
<div class="banner" id="banner-show" style="background-image: linear-gradient(-225deg, rgba(252,201,123,0.2) 0%, rgba(252,201,123,0.2)  50%),
url('<%= cl_image_path @cook.recipe_photos.first[:public_id], crop: :fit %>')">

<div class="card-cooker">
  <div class="card-cooker-img">
    <%= cl_image_tag(@cook.cooker_photo.path, crop: :fill, class: 'cooker-img-show') %>
  </div>

  <div class="card-cooker-id">
    <h3><%= @cook.nickname %> , <%= @cook.age %></h3>
    <h4>Speciality : <b><%= @cook.speciality %></b></h4>
    <h4> <em>"<%= @cook.motto %>"</em></h4>

  </div>

</div>

<!--   <a href="big/image.jpg" class="swipebox" title="My Caption">
  <img src="small/image.jpg" alt="image">
  </a>
 -->
  <%= link_to "View photos", "#", class: "btn btn-primary btn-photos-show swipebox", id: "gallery" %>

</div>

<div class="summary">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8">
        <div class="tabs-header-show">
          <%= link_to "PrÃ©sentation", "#summary-icons", class: "header-summary-show" %>
          <%= link_to "Commentaires", "#", class: "header-summary-show" %>
          <%= link_to "Emplacement", "#map-show", class: "header-summary-show" %>

        </div>

      </div>
      <div class="col-xs-12 col-sm-4">
        <div id="book-form">
          <div id="book-form-header">
            <div> <%= @cook.price %> Euros </div>
            <div> par Marmitte </div>
          </div>
          <%= simple_form_for([@cook, @booking]) do |f| %>
          <%= f.input :foodies_number %>
          <%= f.input :starts_at, as: :string, input_html: { class: 'datepickerrr'} %>
          <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8">
        <div id="summary-icons">
          <div class="container">
            <div class="row">
              <div class="col-xs-2 text-center">
                <i class="fa fa-home fa-tall"  aria-hidden="true"></i>
              </div>
              <div class="col-xs-2 text-center">
                <i class="fa fa-users fa-tall" aria-hidden="true"></i>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-2 text-center">
                <b><%= @cook.home_style %></b>
              </div>
              <div class="col-xs-2 text-center">
                <b><%= @cook.capacity %> marmittes</b>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


<div class="reviews">
</div>

<!--   <h4>Address: <b><%= @cook.address %></b></h4> -->

<div class="col-xs-8 col-xs-offset-2 text-center">
  <div id="map-show"  style="width: 100%; height: 600px;"></div>
</div>


<% content_for(:after_js) do %>

<%= javascript_tag do %>
$(document).ready(function() {

var handler = Gmaps.build('Google');
handler.buildMap({ provider: { scrollwheel: false, zoomControl: true }, internal: {id: 'map-show'} }, function() {
markers = handler.addMarkers(<%= raw @cook_hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
if (markers.length == 0) {
handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});

$( '#gallery' ).click( function( e ) {
  e.preventDefault();
  $.swipebox( [

    { href:"<%= cl_image_path @cook.recipe_photos[0].path %>" },
    { href:"<%= cl_image_path @cook.location_photos[0].path %>"}  ] );
} );

});
<% end %>

<% end %>







